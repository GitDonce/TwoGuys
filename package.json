{
  "name": "two-guys-monorepo",
  "version": "1.0.0",
  "description": "Two Guys Application - Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run --workspace=frontend dev",
    "dev:backend": "npm run --workspace=backend dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run --workspace=frontend build",
    "build:backend": "npm run --workspace=backend build",
    "install:all": "npm install",
    "lint": "npm run --workspace=frontend lint && npm run --workspace=backend lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 